<h1>Edit rental #<%= @rental.id %></h1>

<form action="/rentals/<%= @rental.id %>" method="post">
    <input type="hidden" name="_method" value="put" />
    <label for="member_id">Member:</label>
    <select name="member_id">
        <% for member in @members %>
            <option value="<%= member.id %>" <%= "selected" if member.id == @rental.member_id %>><%= member.name %></option>
        <% end %>
    </select>
    <label for="book_id">Book:</label>
    <select name="book_id">
        <% for book in @books %>
            <option value="<%= book.id %>" <%= "selected" if book.id == @rental.book_id %>><%= book.title %></option>
        <% end %>
    </select>
    <input type="submit" value="Save" />
</form>
